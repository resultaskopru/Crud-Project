@model IEnumerable<Crud_Project.Models.crudtablo>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center text-info">PERSONEL BİLGİ </h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Personel Adı")
        </th>
        <th>
            @Html.DisplayName("Personel Soyadı")
        </th>
        <th>
            @Html.DisplayName("Personel Şifre")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LASTNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PASSWORD)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Ayrıntılar", "Details", new { id=item.ID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
